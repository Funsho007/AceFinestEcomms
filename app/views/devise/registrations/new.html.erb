<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name" %>
  <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
  <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
  <%= f.text_field :address, placeholder: "Address" %>
  <%= f.text_field :city, placeholder: "City" %>
  <%= f.text_field :postal_code, placeholder: "Postal Code" %>
  <%= f.collection_select :province_id, Province.all, :id, :name, prompt: "Select Province" %>

  <%= f.submit "Sign up" %>
<% end %>